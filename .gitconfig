[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  dc = diff --cached
  lg = log -p
  who = shortlog -s --
  desc = branch --edit-description
  sl = log --pretty=format:'%C(bold blue)%h%Creset - %s %C(bold red)<%an>%Creset'
  find = ! sh -c 'git ls-files $2 | grep $1' -

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[push]
  default = simple
  
[rerere]
  enabled = true
  
[submodule]
  fetchJobs = 4
  
[diff]
  compactionHeuristic = true
